<h1>Editar Portafolio Item</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :titulo %>
    <%= f.text_field :titulo %>
  </div>

  <div class="field">
    <%= f.label :subtitulo %>
    <%= f.text_field :subtitulo %>
  </div>

  <div class="field">
    <%= f.label :cuerpo %>
    <%= f.text_area :cuerpo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>